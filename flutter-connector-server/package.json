{
  "name": "flutter-connector-server",
  "version": "1.0.0",
  "description": "A standalone server for monitoring and controlling Flutter applications",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "flutter-connector-server": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 dist/server.js",
    "start": "node dist/server.js",
    "dev": "ts-node --esm src/server.ts",
    "watch": "nodemon --exec ts-node --esm src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "flutter",
    "development",
    "tools",
    "monitoring",
    "debugging"
  ],
  "author": "Flutter Tools Contributors",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "find-process": "^1.4.7",
    "ps-list": "^8.1.0",
    "tree-kill": "^1.2.2",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
} 